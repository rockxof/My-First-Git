#include<stdio.h>

int main()
{
     char o;
 float num1,num2,results;
    
    
    printf("Enter The Operator\n");
    scanf("%c", &o);
    printf("Enter The Number-1\n");
    scanf("%f", &num1);
    printf("Enter The Number-2\n");
    scanf("%f", &num2);
    
    switch(o)
    {
        case '+': results = num1 + num2;
        printf("Addition==> %f\n",results);
        break;
        
        case '-': results = num1 - num2;
         printf("Subtraction==>%f\n",results);
         break;
         
        case '*': results = num1 * num2;
         printf("Multiplication==>%f\n",results);
         break;
         
        case '/': results = num1 / num2;
         printf("Division==>%f\n",results);
         break;
         
            default : printf("Invalid Input\n");
    }


    return 0;
}
